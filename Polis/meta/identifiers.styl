/* Identifiers */
identifier
    &.type
        apply_l( yellow()  )
        italic()
    &.constant
        apply_l( green( 'light_20' ) )
    &.global
        apply_l( blue( 'light_20' ) )
        &.special
            apply_l( cyan( 'light_20' ) )
    &.variable
        apply_l( white(), .9 )
    &.argument
        apply_l( cyan() )
        &.name
            italic()
    &.property
        apply_l( blue( 'light_10' ) )
    &.decorator, &.function
        apply_l( magenta( 'light_10' ) )
    &.method
        apply_l( magenta( 'light_20' ) )
    &.key
        apply_l( green( 'light_20' ) )
    &.class
        apply_l( green( 'light_20' ) )
    &.superclass
        apply_l( cyan() )
    &.name
        apply_l( magenta( 'light_10' ) )

/*
 * Syntax styles
 */

keyword
    apply_l( orange() )
comment
    apply_l( gray() )
processing
    apply_cl( orange( .1 ), yellow() )
declaration
    apply_l( yellow() )
bracket
    apply_cl(
        bgblack( .9 ),
        white( .9 )
    )
operator
    apply_l( orange() )
invalid
    apply_cl(
        red( .9 ),
        gray()
    )
    text-decoration: underline solid red( 'light_20', .9 )
link
    apply_l( blue( 'light_20', .9 ) )
    text-decoration: underline dashed blue( 'light_20', .9 )

/*
 * Syntax styles
 */

keyword
    apply_l( orange( 'light_10' ) )
    italic()
comment
    apply_l( gray(), .9 )
    italic()
processing
    apply_l( green() )
declaration
    apply_l( orange() )
bracket
    apply_l( orange() )
operator, colon, semicolon, separator
    apply_l( orange() )
invalid
    apply_cl(
        red(),
        gray( 'light_30' )
    )
    td_us( red() )
link, filepath
    apply_l( blue() )
    td_ud( blue() )

single-quoted, double-quoted, backtick-quoted
    apply_l( yellow() )
    &.delimiter
        apply_l( orange() )

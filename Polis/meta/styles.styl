/* Styles */
style
    &.at
        apply_l( orange() )
        semi_bold()
    &.selector
        &.element
            apply_l( orange( 'light_10' ) )
            semi_bold()
        &.identifier.id
            debug()
        &.identifier.class
            apply_l( green() )
        &.pseudoclass
            apply_l( white() )
        &.pseudoelement
            apply_l( white() )
    &.attribute
        apply_l( orange() )
        &.value
            apply_l( yellow( 'light_20' ) )
        &.name
            apply_l( yellow( 'light_20' ) )
            italic()
        &.custom
            apply_l( white() )
    &.value
        &.number
            apply_l( cyan() )
            &.unit
                apply_l( orange() )
        &.color
            &.rgb,
            &.hex,
            &.named
                apply_l( cyan() )
        &.keyword
            apply_l( cyan() )
            fs( none )
    &.url-value
        apply_l( yellow( 'light_20' ) )
    &.media-type
        apply_l( cyan() )

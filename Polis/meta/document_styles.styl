/*
 * Document styles
 */
meta
    &.document
        apply_cl(
            bgblack(),
            white( 'dark_10' )
        )

        &.button
            apply_clr(
                linear-gradient(
                    bgblack( 'light_10' ),
                    bgblack(),
                    bgblack()
                ),
                yellow(),
                linear-gradient(
                    bgblack(),
                    bgblack( 'light_10' ),
                    bgblack( 'light_10' )
                )
            )
            &.disabled
                apply_clr(
                    linear-gradient(
                        bgblack( 'dark_20' ),
                        bgblack(),
                        bgblack()
                    ),
                    yellow( 'dark_60' ),
                    linear-gradient(
                        bgblack(),
                        bgblack( 'dark_20' ),
                        bgblack( 'dark_20' )
                    )
                )
            &.highlighted // press-n-hold on selected
                apply_clr(
                    linear-gradient(
                        bgblack(),
                        bgblack(),
                        bgblack( 'light_20' )
                    ),
                    magenta( 'light_10' ),
                    linear-gradient(
                        bgblack( 'light_20' ),
                        bgblack( 'light_20' ),
                        bgblack()
                    )
                )

        &.textfield
            apply_cr(
                bgblack( 'dark_10' ),
                bgblack( 'light_10' )
            )
